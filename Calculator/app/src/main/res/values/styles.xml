<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">38sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="WhiteButton" parent="BaseButton">
        <item name="android:background">@drawable/selector_white_button</item>
        <item name="android:textColor">#979ca4</item>
    </style>
    <style name="OrangeButton" parent="BaseButton">
        <item name="android:background">@drawable/selector_orange_button</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ScreenText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/screen_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
</resources>

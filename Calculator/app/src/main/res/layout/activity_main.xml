<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/screen_background"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_result_tv"
            style="@style/ScreenText"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/show_input_tv"
            style="@style/ScreenText"
            android:text="0"
            android:textSize="56sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/c_btn"
                style="@style/WhiteButton"
                android:text="C"
                android:textColor="#EF7524"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/del_btn"
                style="@style/WhiteButton"
                android:text="DEL"/>


            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/left_btn"
                style="@style/WhiteButton"
                android:text="@string/left_bracket"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/right_btn"
                style="@style/WhiteButton"
                android:text="@string/right_bracket"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/seven_btn"
                style="@style/WhiteButton"
                android:text="@string/seven"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/eight_btn"
                style="@style/WhiteButton"
                android:text="@string/eight"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/nine_btn"
                style="@style/WhiteButton"
                android:text="@string/nine"/>
            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/multiply_btn"
                style="@style/WhiteButton"
                android:text="@string/multply"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/four_btn"
                style="@style/WhiteButton"
                android:text="@string/four"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/five_btn"
                style="@style/WhiteButton"
                android:text="@string/five"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/six_btn"
                style="@style/WhiteButton"
                android:text="@string/six"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/divide_btn"
                style="@style/WhiteButton"
                android:text="@string/divide"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/one_btn"
                style="@style/WhiteButton"
                android:text="@string/one"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/two_btn"
                style="@style/WhiteButton"
                android:text="@string/two"/>

            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/three_btn"
                style="@style/WhiteButton"
                android:text="@string/three"/>
            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/add_btn"
                style="@style/WhiteButton"
                android:text="@string/add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/point_btn"
                style="@style/WhiteButton"
                android:text="@string/point"/>
            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/zero_btn"
                style="@style/WhiteButton"
                android:text="@string/zero"/>


            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/equal_btn"
                style="@style/OrangeButton"
                android:layout_weight="1"
                android:text="@string/equal"/>


            <com.example.chenjinhang.calculator.view.MiButton
                android:id="@+id/sub_btn"
                style="@style/WhiteButton"
                android:text="@string/sub"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>